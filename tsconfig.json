{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"useDefineForClassFields": true,
		"paths": {
			"~p0/*": ["./pawnote/src/*"],
			"~d0/*": ["./utils/desero/src/*"],
			"~t0/*": ["./utils/uwtil/src/*"],
			"~_maq/*": ["./utils/maq/src/*"]
		},
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"stripInternal": true
	},
	"include": [
		"examples",
		"pawnote/src/**/*",
		"src/**/*",
		"utils/desero/src/**/*",
		"utils/uwtil/src/**/*",
		"utils/maq/src/**/*",
		"tools"
	],
	"exclude": ["node_modules", "dist"]
}
